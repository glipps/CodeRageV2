<div class="card-body aqua-gradient color-block mb-3 mx-auto z-depth-1 siteNameHeader">
  <a href="/">
    <h1 id="siteName">CodeRage</h1>
  </a>
  <br>
  <p class="tagLine">Vent and let it all out..</p>
</div>

<div class="container">
  <div class="card-body aqua-gradient color-block mb-3 mx-auto z-depth-1 loginBlock">
    <h1>Sign Up</h1>

    {{#if message.length}}
    <div class="alert alert-danger">{{ message }}</div>
    {{/if}}

    <form action="/signup" method="post">
      <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" required>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" required>
      </div>
      <button type="submit" class="btn aqua-gradient loginButton">Sign Up</button>
    </form>

    <hr>

    <p class="directories">Need an account? <a class="link" href="/signup">Signup</a></p>
    <p class="directories">Or return to <a class="link" href="/">home</a>.</p>
  </div>
</div>